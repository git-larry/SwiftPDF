# Configuración de la aplicación SwiftPDF
# Copia este archivo a .env.local y configura las variables según tu entorno

# Configuración del entorno
NEXT_PUBLIC_APP_NAME=SwiftPDF
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Configuración de análisis (opcional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_HOTJAR_ID=

# Configuración de API (para futuras integraciones)
NEXT_PUBLIC_API_BASE_URL=

# Configuración de límites de archivos
NEXT_PUBLIC_MAX_FILE_SIZE=104857600
NEXT_PUBLIC_MAX_FILES_PER_UPLOAD=20

# Configuración de características
NEXT_PUBLIC_ENABLE_PREMIUM_FEATURES=false
NEXT_PUBLIC_ENABLE_USER_ACCOUNTS=false
NEXT_PUBLIC_ENABLE_CLOUD_STORAGE=false

# Configuración de seguridad
NEXT_PUBLIC_ENABLE_RECAPTCHA=false
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=

# Configuración de CDN (opcional)
NEXT_PUBLIC_CDN_URL=

# Variables de servidor (no exponer públicamente)
SECRET_KEY=your-secret-key-here
DATABASE_URL=
REDIS_URL=